# ============================================
# THEMOS EMPIRE FX TELEGRAM BOT - CONFIGURATION
# ============================================

# Telegram Bot Token (Get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Paystack API Keys (Get from Paystack Dashboard)
PAYSTACK_SECRET_KEY=sk_live_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_live_your_public_key_here

# Webhook URL (for receiving Paystack payment notifications)
# Set this to your server URL when deployed
WEBHOOK_URL=https://your-server.com/webhook

# Server Port
PORT=3000

# Admin Telegram User ID (Your Telegram ID to receive notifications)
# Get your ID by messaging @userinfobot on Telegram
ADMIN_TELEGRAM_ID=YOUR_TELEGRAM_USER_ID

# Telegram Group/Channel Links for each plan
TELEGRAM_FREE_TRIAL_LINK=https://t.me/+YOUR_FREE_TRIAL_LINK
TELEGRAM_VIP_SIGNALS_LINK=https://t.me/+YOUR_VIP_SIGNALS_LINK
TELEGRAM_PRO_TRADER_LINK=https://t.me/+YOUR_PRO_TRADER_LINK
TELEGRAM_LIFETIME_ACCESS_LINK=https://t.me/+YOUR_LIFETIME_ACCESS_LINK
